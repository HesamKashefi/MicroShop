{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Urls": {
    "View": "https://microshop-view:8000/",
    "Apigateway": "https://apigateway:8001/",
    "Identity": "https://identity-api:8002/",
    "Catalog": "https://catalog-api:8003/",
    "Cart": "https://cart-api:8004/",
    "Orders": "https://orders-api:8005/"
  },
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      },
      "catalog": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "products/{**catch-all}"
        }
      },
      "cart": {
        "ClusterId": "cart",
        "Match": {
          "Path": "cart/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "destination0": {
            "Address": "https://catalog-api:8002"
          }
        }
      },
      "catalog": {
        "Destinations": {
          "destination0": {
            "Address": "https://catalog-api:8003"
          }
        }
      },
      "cart": {
        "Destinations": {
          "destination0": {
            "Address": "https://cart-api:8004"
          }
        }
      }
    }
  }
}
