@using Common.Data;
@model PagedResult;
@{
}


<div class="w-100 my-4 d-flex justify-content-center align-items-center" style="gap: 1rem;">
    @if(Model.CurrentPage > 1)
    {
        <a asp-route-PageNumber="@(Model.CurrentPage - 1)" class="btn btn-outline-secondary">Prev</a>
    }
    @if(Model.CurrentPage < Model.TotalPages)
    {
        <a asp-route-PageNumber="@(Model.CurrentPage + 1)" class="btn btn-outline-secondary">Next</a>
    }
</div>
